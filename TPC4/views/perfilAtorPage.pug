extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1= title
            a(href="/atores")
                button.w3-button.w3-grey(type="button") Voltar
        .w3-container 
            h1= ator.nome 
            ul.w3-ul 
                each filme in ator.filmes 
                    li= filme
        footer.w3-container.w3-teal 
            address Generated by ENGWEB2025 at #{date}.