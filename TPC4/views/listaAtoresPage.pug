extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1= title
            a(href="/")
                button.w3-button.w3-grey(type="button") Voltar
        .w3-container 
            table.w3-table-all 
                tr 
                    th Nome 
                each ator in atores
                    tr 
                        td 
                            a(href="/atores/" + ator.id) #{ator.nome}
        footer.w3-container.w3-teal 
            address Generated by ENGWEB2025 at #{date}.