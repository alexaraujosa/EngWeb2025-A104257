extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1= title
            a(href="/")
                button.w3-button.w3-grey(type="button") Voltar
        .w3-container 
            table.w3-table-all 
                tr 
                    th Titulo 
                    th Ano 
                    th Elenco 
                    th Género 
                    th Operações
                each filme in filmes
                    tr 
                        td= filme.title
                        td= filme.year 
                        td
                            ul.w3-ul
                                each ator in filme.cast 
                                    li= ator
                        td 
                            ul.w3-ul 
                                each genero in filme.genres
                                    li= genero 
                        td 
                                a(href="/filmes/editar/" + filme.id)
                                    img(src="/images/edit.png" style="width:25px; height:25px")
                                a(href="/filmes/apagar/" + filme.id)
                                    img(src="/images/delete.png" style="width:25px; height:25px")
        footer.w3-container.w3-teal 
            address Generated by ENGWEB2025 at #{date}.