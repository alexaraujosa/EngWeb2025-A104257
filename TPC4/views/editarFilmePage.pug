extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-purple 
            h1= title 
        form.w3-container(method="POST")
            fieldset 
                label Título 
                input.w3-input.w3-round(type="text" name="title" value=filme.title)
                label Ano
                input.w3-input.w3-round(type="text" name="year" value=filme.year)
                label Elenco 
                input.w3-input.w3-round(type="text" name="cast" value=filme.cast readonly)
                label Género
                input.w3-input.w3-round(type="text" name="genres" value=filme.genres readonly)

            button.w3-button.w3-green(type="submit") Editar
            a(href="/filmes")
                button.w3-button.w3-grey(type="button") Voltar
        footer.w3-container.w3-purple 
        address Generated by ENGWEB2025 at #{date}.