<!DOCTYPE html>
<html lang="pt">
    <head>
        <meta charset="UTF-8"/>
        <title>Processo de Ingestão</title>
        <link rel="stylesheet" href="/stylesheets/style.css"/>
        <link rel="stylesheet" href="/stylesheets/produtor/produtorForm.css" />
    </head>
    <body>
        <form method="POST" enctype="multipart/form-data" class="form-container">
            <h1>Formulário de Ingestão</h1>

            <% if (typeof error !== 'undefined') { %>
                <div class="error-message"><%= error %></div>
            <% } %>

            <div class="form-group">
            <label for="itemName">Nome do Item</label>
            <input type="text" id="itemName" name="itemName" required />
            </div>

            <div class="form-group">
            <label for="itemDescription">Descrição do Item</label>
            <textarea id="itemDescription" name="itemDescription" rows="4" required style="resize: vertical; width: 100%;"></textarea>
            </div>

            <div class="checkbox-wrapper">
            <input type="checkbox" id="privacy" name="privacy" />
            <label for="privacy">Item público</label>
            </div>

            <div class="form-group">
            <label for="file">Ficheiro</label>
            <input type="file" id="file" name="file" required />
            </div>

            <button type="submit">Submeter</button>
            <a href="/produtor/dashboard">
                <button type="button" class="back-button">Voltar</button>
            </a>
        </form>
    </body>
</html>

