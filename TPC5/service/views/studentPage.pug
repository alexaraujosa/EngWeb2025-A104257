extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1 Perfil do Aluno - #{aluno._id}
        .w3-container
            table.w3-table-all
                tr 
                    th ID 
                    td= aluno._id 
                tr 
                    th Name 
                    td= aluno.nome 
                tr 
                    th Gitlink 
                    td= aluno.gitlink 
                each num in Array.from({length: 9}, (_, i) => i)
                    tr
                        th TPC #{num}
                        if aluno["tpc" + num]
                            td FEITO 
                        else 
                            td POR FAZER
        h1 
            a(href="/alunos") Voltar 
        footer.w3-container.w3-teal 
            adress Generated by EW2025 class at #{date} 