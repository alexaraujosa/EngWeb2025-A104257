extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal 
            h1
                span Students List 
                a.w3-btn.w3-round.w3-grey(href="/alunos/registo") Adicionar 
        .w3-container 
            table.w3-table-all 
                tr 
                    th ID 
                    th Name 
                    th Gitlink 
                    th Actions
                each student in slist 
                    tr 
                        td= student._id 
                        td
                            a(href="/alunos/" + student._id)= student.nome
                        td= student.gitlink 
                        td
                            span 
                                a(href="/alunos/edit/" + student._id)
                                    img(src="/images/edit.png" style="width:25px; height:25px")
                            span 
                            span [
                                a(href="/alunos/delete/" + student._id) Delete
                            span ]
        footer.w3-container.w3-teal 
            adress Generated by EW2025 class at #{date} 