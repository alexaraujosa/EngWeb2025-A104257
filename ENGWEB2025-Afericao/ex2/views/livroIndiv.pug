extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1 Livro
    .w3-container 
      h2 Informações do Livro

      table.w3-table-all
        tr 
            th Id 
            td= data.bookId 
        tr 
            th Titulo 
            td= data.title 
        tr 
            th Series 
            td= data.series
        tr 
            th Autor
            td= data.author 
        tr 
            th Rating 
            td= data.rating 
        tr 
            th Description 
            td= data.description 
        tr 
            th Language
            td= data.language 
        tr 
            th ISBN 
            td= data.isbn
        tr 
            th Genres 
            td= data.genres 
        tr 
            th Characters
            td= data.characters
        tr 
            th Book Format
            td= data.bookFormat
        tr 
            th Edition
            td= data.edition
        tr 
            th Pages
            td= data.pages
        tr 
            th Publisher
            td= data.publisher
        tr 
            th publishDate
            td= data.publishDate
        tr 
            th First Publish Date
            td= data.firstPublishDate
        tr 
            th Awards
            td= data.awards
        tr 
            th Num Ratings
            td= data.numRatings
        tr 
            th Ratings By Stars
            td= data.ratingsByStars
        tr 
            th Liked Percent
            td= data.likedPercent
        tr 
            th setting
            td= data.setting
        tr 
            th Cover Img
            td
                img(src=data.coverImg, alt="Capa do Livro")
        tr 
            th BBE Score
            td= data.bbeScore 
        tr 
            th BBE Votes
            td= data.bbeVotes
        tr 
            th Price
            td= data.price 
      h3 
        a(href="/") Voltar
    footer.w3-container.w3-blue 
