extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1 Entidade Comunicante - #{nipc}
    .w3-container 
      h2 Informações da Entidade - #{nome}
      p.w3-p Nome da Entidade: #{nome}
      p.w3-p NIPC da Entidade: #{nipc}

      h3 Tabela de Contratos
      table.w3-table-all 
        tr 
          th ID  
          th Objecto
          th Data Celebração
          th Preço Contratual 
        each contrato in contratos
          tr 
            td= contrato._id 
            td= contrato.objectoContrato 
            td= contrato.dataCelebracaoContrato 
            td= contrato.precoContratual 
      p.w3-p Somatório do valor dos contratos: #{valor}
      h3 
        a(href="/") Voltar
    footer.w3-container.w3-blue 
